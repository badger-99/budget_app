<p style="color: green"><%= notice %></p>

<h1>Home</h1>
<%= button_to "Sign Out", destroy_user_session_path, method: :get %>

<div id="categories">
  <% @categories.each do |category| %>
    <% @expenditures = @payments.where(category_payments: { category_id: category.id }) %>
    <div>
      <i class="<%= category.icon %>"></i>
      <div>
        <h3><a href=<%=payments_path(category.id)%>><%=category.name%></a><h3>
        <p>$<%= format("%.2f", @expenditures.sum(:amount))%></p>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "New category", new_category_path %>
